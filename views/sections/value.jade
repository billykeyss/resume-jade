#values.wholepage
    .plane
        img.airplane(src='images/svg/airplane.svg')
    .sunMain
    img.pirateShipOne(src='images/svg/pirate-ship-1.svg')

    .container.profileContainer.align-center
        h1.titleText My Values
        each val, index in data.values
            if index == 0 || index == 3
                | <div class="row valueContainers">
                .col-md-4
                    img.value(src=val.imgSrc)
                    p.valueTitle=val.value
                    p.valueText=val.description
            else if index == 2 || index == 5
                .col-md-4
                    img.value(src=val.imgSrc)
                    p.valueTitle=val.value
                    p.valueText=val.description
                | </div>
            else
                .col-md-4
                    img.value(src=val.imgSrc)
                    p.valueTitle=val.value
                    p.valueText=val.description

    include ../components/island
